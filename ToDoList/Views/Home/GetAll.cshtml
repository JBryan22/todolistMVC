@{
  Layout = "_Layout";
}

<div class="jumbotron">

    @if(Model.Count == 0)
    {
      <h3>There are no tasks in your ToDoList.</h3>
    }

      <div class="row">
      @foreach (var task in Model)
      {
        <div class="col-md-5">
        <h4>Task Name</h4>
          <p>@task.GetName()</p>
        </div>

        <div class="col-md-5">
        <h4>Due on</h4>
          <p>@task.GetDueDate()</p>
        </div>
      }
      </div>
</div>


<div class="row">
  <div class="col-md-1">
    <form action="/clearAll" method="post">
      <button type="submit" class="btn btn-lg btn-danger">Clear All</button>
    </form>
  </div>
  <div class="col-md-1">
    <a href="/">    <button class="btn btn-lg btn-info">Home</button></a>
  </div>
</div>
